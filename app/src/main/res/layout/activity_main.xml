<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayoutContainer"
        android:layout_width="435dp"
        android:layout_height="1060dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/bakground_salon"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"> <!-- Background added here -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Nails Salon"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:textStyle="bold" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/innerLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/MakeAppointment"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/pink"
                    android:text="Make Appointment"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/ViewAppointment"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/pink"
                    android:text="View Appointment"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/ViewAppointmentHistory"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/pink"
                    android:text="View Appointment History"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
